  }
  #prompt { font-size: 18px; margin-bottom: 10px; }
  #question { font-size: 28px; margin: 20px 0; }
  .choice {
    border: 1px solid #ccc;
    padding: 10px;
    margin: 8px 0;
    border-radius: 6px;
    cursor: pointer;
    font-size: 18px;
  }
  .choice:hover { background: #f0f0f0; }
  button {
    margin-top: 20px;
    padding: 10px 20px;
    font-size: 16px;
  }
