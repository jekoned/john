<body>

<h1>Macbeth Quiz</h1>

<div id="prompt"></div>
<div id="question"></div>
<div id="choices"></div>

<button onclick="nextQuestion()">Next</button>
<p id="progress"></p>

<script>
// ----------------------
// Macbeth Questions
// ----------------------
const otherQuestions = [
  { prompt:"Choose the correct answer", q:"Why is the Porter scene included in Macbeth?", a:"To provide comic relief and lower the tension",
    choices:["To provide comic relief and lower the tension","To introduce a new villain","To explain Macbeth’s childhood","To reveal Banquo’s prophecy"] },

  { prompt:"Choose the correct answer", q:"What does the first apparition tell Macbeth?", a:"Beware Macduff",
    choices:["Beware Macduff","Beware Banquo","Beware Malcolm","Beware Fleance"] },

  { prompt:"Choose the correct answer", q:"What does the second apparition tell Macbeth?", a:"Birnam Wood will march to Dunsinane",
    choices:["Birnam Wood will march to Dunsinane","Macbeth will be king forever","Banquo’s sons will die","Macduff is already dead"] },

  { prompt:"Choose the correct answer", q:"What does the third apparition tell Macbeth?", a:"No one born of a woman will harm him",
    choices:["No one born of a woman will harm him","He will die in battle","Macduff is coming for him","He will lose the throne"] },

  { prompt:"Choose the correct answer", q:"Where did Macduff go?", a:"England",
    choices:["England","Ireland","Scotland","France"] },

  { prompt:"Choose the correct answer", q:"Who did Macduff visit in England?", a:"Malcolm",
    choices:["Malcolm","Banquo","Ross","Fleance"] },

  { prompt:"Choose the correct answer", q:"What does Macbeth hallucinate at his coronation banquet?", a:"The ghost of Banquo",
    choices:["The ghost of Banquo","A floating dagger","Blood on his hands","The witches"] },

  { prompt:"Choose the correct answer", q:"Who says 'Here's the smell of blood still; all the perfumes of Arabia will not sweeten this little hand'?", a:"Lady Macbeth",
    choices:["Lady Macbeth","Macbeth","Lady Macduff","The Porter"] },

  { prompt:"Choose the correct answer", q:"Lady Macbeth says she would have killed Duncan, but he looked too much like her what?", a:"Father",
    choices:["Father","Brother","Son","Husband"] },

  { prompt:"Choose the correct answer", q:"Does the motif of nature appear when Malcolm tells his army to camouflage with branches?", a:"Yes",
    choices:["Yes","No"] },

  { prompt:"Choose the correct answer", q:"Who escapes from the murderers?", a:"Fleance",
    choices:["Fleance","Banquo","Macduff","Malcolm"] },

  { prompt:"Choose the correct answer", q:"Who was 'untimely ripped' from their mother?", a:"Macduff",
    choices:["Macduff","Macbeth","Banquo","Malcolm"] },

  { prompt:"Choose the correct answer", q:"Who witnesses Lady Macbeth sleepwalking?", a:"A gentlewoman and a doctor",
    choices:["A gentlewoman and a doctor","Macbeth and Banquo","Ross and Lennox","The witches"] },

  { prompt:"Choose the correct answer", q:"Were Lady Macduff and her children killed because of Macbeth?", a:"Yes",
    choices:["Yes","No"] },

  { prompt:"Choose the correct answer", q:"Who tells Macduff that his family has been killed?", a:"Ross",
    choices:["Ross","Malcolm","Macbeth","Lennox"] },

  { prompt:"Choose the correct answer", q:"Which ingredient is NOT in the witches' brew?", a:"Lady Macbeth’s hair",
    choices:["Lady Macbeth’s hair","Dragon scales","Finger of a baby","Baboon blood"] },

  { prompt:"Choose the correct answer", q:"What excuse does Macbeth give for his strange behavior at the banquet?", a:"He has struggled with mental illness since childhood",
    choices:["He has struggled with mental illness since childhood","He is drunk","He is tired","He is angry at Banquo"] },

  { prompt:"Choose the correct answer", q:"Where does Donalbain flee after Duncan’s murder?", a:"Ireland",
    choices:["Ireland","England","France","Wales"] },

  { prompt:"Choose the correct answer", q:"Lady Macbeth wishes she were what so she could kill Duncan herself?", a:"A man",
    choices:["A man","A witch","A queen","A soldier"] },

  { prompt:"Choose the correct answer", q:"Who discovers King Duncan’s body?", a:"Macduff",
    choices:["Macduff","Macbeth","Banquo","Lennox"] },

  { prompt:"Choose the correct answer", q:"Who kills Macbeth?", a:"Macduff",
    choices:["Macduff","Malcolm","Banquo","Fleance"] }
];

// ----------------------
// Quiz Logic
// ----------------------
function shuffle(arr) {
  return arr.sort(() => Math.random() - 0.5);
}

const quiz = shuffle(otherQuestions);

let index = 0;
let score = 0;
let answered = false;

function load() {
  answered = false;
  const item = quiz[index];

  document.getElementById("prompt").textContent = item.prompt;
  document.getElementById("question").textContent = item.q;
  document.getElementById("progress").textContent = `Question ${index+1} of ${quiz.length}`;

  const div = document.getElementById("choices");
  div.innerHTML = "";

  const choices = shuffle(item.choices.slice());

  choices.forEach(c => {
    const el = document.createElement("div");
    el.className = "choice";
    el.textContent = c;
    el.onclick = () => select(c, el, item.a);
    div.appendChild(el);
  });
}

function select(choice, el, correctAnswer) {
  if (answered) return;
  answered = true;

  if (choice === correctAnswer) {
    score++;
    el.style.background = "#c8f7c5";
  } else {
    el.style.background = "#f7c5c5";
    const div = document.getElementById("choices");
    Array.from(div.children).forEach(child => {
      if (child.textContent === correctAnswer) {
        child.style.background = "#c8f7c5";
        child.style.fontWeight = "bold";
      }
    });
  }
}

function nextQuestion() {
  if (!answered) return;
  index++;
  if (index < quiz.length) {
    load();
  } else {
    document.body.innerHTML = `<h1>Quiz Complete</h1><h2>Your Score: ${score} / ${quiz.length}</h2>`;
  }
}

load();
</script>

</body>
</html>
